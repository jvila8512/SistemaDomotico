<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.alarma.AlarmaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="417dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="ConfiguraciÃ³n de la Alarma"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/tiempoActivado"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Tiempo Espera( )" />

            <EditText
                android:id="@+id/tiempo"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="15" />

            <TextView
                android:id="@+id/ti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="(seg)" />

            <Button
                android:id="@+id/enviar"
                android:layout_width="38dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Enviar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/estadoAlarma"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Alarma: Desactivada"
                android:textAlignment="inherit"
                android:textSize="24sp" />

            <Button
                android:id="@+id/activar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Alarma" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>